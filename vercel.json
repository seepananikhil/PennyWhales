{
  "version": 2,
  "builds": [
    {
      "src": "web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/server.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "/web/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/web/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "/web/manifest.json"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|svg|ico|json))",
      "dest": "/web/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/web/index.html"
    }
  ]
}
